@page "/register"
@layout WebsiteLayout
@using PotteryWorkshop.Application.Common.Interfaces
@using PotteryWorkshop.Application.DTOs
@using Microsoft.AspNetCore.Components.Web

<PageTitle>Register - Pottery Workshop</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Style="margin-top: 60px; margin-bottom: 60px;">
    <MudPaper Elevation="4" Style="padding: 40px; border-radius: 16px; background: #FFFFFF;">
        <MudText Typo="Typo.h4" Align="Align.Center" Style="color: #8B7355; margin-bottom: 10px; font-family: 'Georgia', serif;">
            Join Our Community
        </MudText>
        <MudText Typo="Typo.body1" Align="Align.Center" Style="color: #6B5744; margin-bottom: 30px;">
            Create an account to start your pottery journey
        </MudText>

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <MudAlert Severity="Severity.Error" Style="margin-bottom: 20px;">@_errorMessage</MudAlert>
        }

        @if (!string.IsNullOrEmpty(_successMessage))
        {
            <MudAlert Severity="Severity.Success" Style="margin-bottom: 20px;">@_successMessage</MudAlert>
        }

        <EditForm Model="_registerModel" OnValidSubmit="HandleRegister" FormName="RegisterForm" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary style="color: #e50000; margin-bottom: 20px;" />
            
            <MudGrid Spacing="3">
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="_registerModel!.FirstName" 
                                  Label="First Name" 
                                  Variant="Variant.Outlined"
                                  Placeholder="Enter first name"
                                  Required="true"
                                  RequiredError="First name is required"
                                  For="@(() => _registerModel!.FirstName)" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="_registerModel!.LastName" 
                                  Label="Last Name" 
                                  Variant="Variant.Outlined"
                                  Placeholder="Enter last name"
                                  Required="true"
                                  RequiredError="Last name is required"
                                  For="@(() => _registerModel!.LastName)" />
                </MudItem>
            </MudGrid>

            <MudTextField @bind-Value="_registerModel!.Email" 
                          Label="Email" 
                          Variant="Variant.Outlined"
                          InputType="InputType.Email"
                          HelperText="We'll never share your email"
                          Style="margin-top: 20px;"
                          Placeholder="your.email@example.com"
                          Required="true"
                          RequiredError="Email is required"
                          For="@(() => _registerModel!.Email)" />

            <MudGrid Spacing="2" Style="margin-top: 20px;">
                <MudItem xs="4" md="3">
                    <MudSelect @bind-Value="_registerModel!.CountryCode" 
                               Label="Code" 
                               Variant="Variant.Outlined"
                               AnchorOrigin="Origin.BottomCenter"
                               Required="true"
                               RequiredError="Country code is required">
                        <MudSelectItem Value="@("+1")">+1 (US/CA)</MudSelectItem>
                        <MudSelectItem Value="@("+44")">+44 (UK)</MudSelectItem>
                        <MudSelectItem Value="@("+91")">+91 (IN)</MudSelectItem>
                        <MudSelectItem Value="@("+61")">+61 (AU)</MudSelectItem>
                        <MudSelectItem Value="@("+86")">+86 (CN)</MudSelectItem>
                        <MudSelectItem Value="@("+81")">+81 (JP)</MudSelectItem>
                        <MudSelectItem Value="@("+49")">+49 (DE)</MudSelectItem>
                        <MudSelectItem Value="@("+33")">+33 (FR)</MudSelectItem>
                        <MudSelectItem Value="@("+971")">+971 (AE)</MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem xs="8" md="9">
                    <MudTextField @bind-Value="_registerModel!.Phone" 
                                  Label="Phone Number" 
                                  Variant="Variant.Outlined"
                                  InputType="InputType.Telephone"
                                  HelperText="We'll send booking confirmations here"
                                  Placeholder="Enter phone number"
                                  Required="true"
                                  RequiredError="Phone number is required"
                                  For="@(() => _registerModel!.Phone)" />
                </MudItem>
            </MudGrid>

            <MudTextField @bind-Value="_registerModel!.Password" 
                          Label="Password" 
                          Variant="Variant.Outlined"
                          InputType="@(_showPassword ? InputType.Text : InputType.Password)"
                          Adornment="Adornment.End"
                          AdornmentIcon="@(_showPassword ? Icons.Material.Filled.Visibility : Icons.Material.Filled.VisibilityOff)"
                          OnAdornmentClick="TogglePasswordVisibility"
                          HelperText="At least 6 characters"
                          Style="margin-top: 20px;"
                          Placeholder="Enter password"
                          Required="true"
                          RequiredError="Password is required"
                          For="@(() => _registerModel!.Password)" />

            <MudTextField @bind-Value="_registerModel!.ConfirmPassword" 
                          Label="Confirm Password" 
                          Variant="Variant.Outlined"
                          InputType="@(_showConfirmPassword ? InputType.Text : InputType.Password)"
                          Adornment="Adornment.End"
                          AdornmentIcon="@(_showConfirmPassword ? Icons.Material.Filled.Visibility : Icons.Material.Filled.VisibilityOff)"
                          OnAdornmentClick="ToggleConfirmPasswordVisibility"
                          HelperText="Re-enter your password"
                          Style="margin-top: 20px; margin-bottom: 10px;"
                          Placeholder="Re-enter password"
                          Required="true"
                          RequiredError="Confirm password is required"
                          For="@(() => _registerModel!.ConfirmPassword)" />

            <MudCheckBox @bind-Value="_agreedToTerms" 
                         Color="Color.Primary" 
                         Style="margin-bottom: 20px;"
                         Dense="false"
                         Size="Size.Medium"
                         Label="">
                <MudText Typo="Typo.body2" Style="color: #6B5744;">
                    I agree to the <MudLink Href="/terms" Style="color: #D4A574; font-weight: 600;">Terms & Conditions</MudLink> and 
                    <MudLink Href="/privacy" Style="color: #D4A574; font-weight: 600;">Privacy Policy</MudLink>
                </MudText>
            </MudCheckBox>

            @if (!_agreedToTerms && _showValidationMessage)
            {
                <MudAlert Severity="Severity.Warning" Style="margin-bottom: 20px;">
                    Please agree to the Terms & Conditions to continue.
                </MudAlert>
            }

            <MudButton ButtonType="ButtonType.Submit" 
                       Variant="Variant.Filled" 
                       Color="Color.Primary" 
                       FullWidth="true"
                       Size="Size.Large"
                       Style="margin-bottom: 20px; text-transform: none; font-weight: 600;"
                       Disabled="_isLoading">
                @if (_isLoading)
                {
                    <MudProgressCircular Size="Size.Small" Indeterminate="true" Color="Color.Surface" />
                    <span style="margin-left: 10px;">Creating account...</span>
                }
                else
                {
                    <span>Create Account</span>
                }
            </MudButton>
        </EditForm>

        <MudDivider Style="margin: 20px 0;" />

        <MudText Align="Align.Center" Typo="Typo.body2" Style="color: #6B5744;">
            Already have an account? 
            <MudLink Href="/login" Style="color: #D4A574; font-weight: 600;">Sign in here</MudLink>
        </MudText>
    </MudPaper>
</MudContainer>

@code {
    [SupplyParameterFromForm]
    private RegisterModel? _registerModel { get; set; }
    
    [SupplyParameterFromForm]
    private bool _agreedToTerms { get; set; }
    
    private bool _showPassword = false;
    private bool _showConfirmPassword = false;
    private bool _isLoading = false;
    private bool _showValidationMessage = false;
    private string _errorMessage = string.Empty;
    private string _successMessage = string.Empty;

    [Inject] private IUserAuthenticationService AuthService { get; set; } = default!;
    [Inject] private NavigationManager Navigation { get; set; } = default!;

    protected override void OnInitialized()
    {
        // Initialize model if null
        _registerModel ??= new RegisterModel();
        
        // Set default country code to +91 (India) if not already set
        if (string.IsNullOrEmpty(_registerModel.CountryCode))
        {
            _registerModel.CountryCode = "+91";
        }
    }

    private void TogglePasswordVisibility()
    {
        _showPassword = !_showPassword;
    }

    private void ToggleConfirmPasswordVisibility()
    {
        _showConfirmPassword = !_showConfirmPassword;
    }

    private async Task HandleRegister()
    {
        _showValidationMessage = false;
        _isLoading = true;
        _errorMessage = string.Empty;
        _successMessage = string.Empty;

        try
        {
            // Check if model is null
            if (_registerModel == null)
            {
                _errorMessage = "An error occurred. Please try again.";
                _isLoading = false;
                return;
            }

            // Check if user agreed to terms
            if (!_agreedToTerms)
            {
                _errorMessage = "You must agree to the Terms & Conditions to create an account.";
                _showValidationMessage = true;
                _isLoading = false;
                return;
            }

            // Validate passwords match
            if (_registerModel.Password != _registerModel.ConfirmPassword)
            {
                _errorMessage = "Passwords do not match.";
                _isLoading = false;
                return;
            }

            // Validate phone number is not empty
            if (string.IsNullOrWhiteSpace(_registerModel.Phone))
            {
                _errorMessage = "Phone number is required.";
                _isLoading = false;
                return;
            }

            // Combine country code with phone number
            var fullPhoneNumber = $"{_registerModel.CountryCode}{_registerModel.Phone}";

            var result = await AuthService.RegisterAsync(
                _registerModel.Email,
                _registerModel.Password,
                _registerModel.FirstName,
                _registerModel.LastName,
                fullPhoneNumber
            );

            if (result.Success)
            {
                _successMessage = "Account created successfully! Redirecting to login...";
                await Task.Delay(2000);
                Navigation.NavigateTo("/login");
            }
            else
            {
                _errorMessage = result.ErrorMessage ?? "An error occurred during registration. Please try again.";
            }
        }
        catch (Exception)
        {
            _errorMessage = "An error occurred during registration. Please try again.";
        }
        finally
        {
            _isLoading = false;
        }
    }

    public class RegisterModel
    {
        [Required(ErrorMessage = "First name is required")]
        [StringLength(50, ErrorMessage = "First name cannot exceed 50 characters")]
        public string FirstName { get; set; } = string.Empty;

        [Required(ErrorMessage = "Last name is required")]
        [StringLength(50, ErrorMessage = "Last name cannot exceed 50 characters")]
        public string LastName { get; set; } = string.Empty;

        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email address")]
        [StringLength(100, ErrorMessage = "Email cannot exceed 100 characters")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "Country code is required")]
        public string CountryCode { get; set; } = "+91";

        [Required(ErrorMessage = "Phone number is required")]
        [RegularExpression(@"^\d{10,15}$", ErrorMessage = "Phone number must be 10-15 digits")]
        public string Phone { get; set; } = string.Empty;

        [Required(ErrorMessage = "Password is required")]
        [MinLength(6, ErrorMessage = "Password must be at least 6 characters")]
        [StringLength(100, ErrorMessage = "Password cannot exceed 100 characters")]
        public string Password { get; set; } = string.Empty;

        [Required(ErrorMessage = "Confirm password is required")]
        [Compare(nameof(Password), ErrorMessage = "Passwords do not match")]
        public string ConfirmPassword { get; set; } = string.Empty;
    }
}
