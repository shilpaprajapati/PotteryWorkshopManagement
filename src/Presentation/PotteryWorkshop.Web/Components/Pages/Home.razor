@page "/"

<PageTitle>Pottery Workshop Management</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Welcome to Pottery Workshop Management</MudText>
<MudText Typo="Typo.body1" Class="mb-4">
    Manage your pottery workshops, bookings, and customers efficiently with our comprehensive system.
</MudText>

<MudGrid>
    <MudItem xs="12" sm="6" md="4">
        <MudCard Elevation="4">
            <MudCardContent>
                <MudText Typo="Typo.h5" Color="Color.Primary">
                    <MudIcon Icon="@Icons.Material.Filled.School" Class="mr-2" /> Workshops
                </MudText>
                <MudText Typo="Typo.body2" Class="mt-2">
                    Create and manage pottery workshops with ease. Set schedules, pricing, and participant limits.
                </MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/workshops">View Workshops</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="4">
        <MudCard Elevation="4">
            <MudCardContent>
                <MudText Typo="Typo.h5" Color="Color.Secondary">
                    <MudIcon Icon="@Icons.Material.Filled.BookOnline" Class="mr-2" /> Bookings
                </MudText>
                <MudText Typo="Typo.body2" Class="mt-2">
                    Track and manage all workshop bookings. Monitor participant counts and payment status.
                </MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Secondary" Href="/bookings">View Bookings</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="4">
        <MudCard Elevation="4">
            <MudCardContent>
                <MudText Typo="Typo.h5" Color="Color.Tertiary">
                    <MudIcon Icon="@Icons.Material.Filled.People" Class="mr-2" /> Customers
                </MudText>
                <MudText Typo="Typo.body2" Class="mt-2">
                    Maintain a database of customers and their contact information for efficient communication.
                </MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Tertiary" Href="/customers">View Customers</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
</MudGrid>

